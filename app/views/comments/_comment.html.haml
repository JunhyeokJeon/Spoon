.comment.clearfix
  .comment_content
    %p.comment_name
      %strong
      = comment.user_nickname
    %p.comment_body
      = comment.description
    %p.comment_time
      = time_ago_in_words(comment.created_at)
      &nbsp Ago
  -if user_signed_in?
    - if comment.user_id == current_user.id
      %p
        = link_to 'Delete', [comment.pin, comment], method: :delete, class: 'button', data: { confirm: 'Are you sure? '}



